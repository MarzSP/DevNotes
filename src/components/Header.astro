---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
const base = import.meta.env.BASE_URL;
---

<header>
	<nav>
		<h2><a href={base}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={`${base}`}>Home</HeaderLink>
			<HeaderLink href={`${base}blog/`}>Blog</HeaderLink>
			<HeaderLink href={`${base}about/`}>About</HeaderLink>
			<HeaderLink href={`${base}foundations/`}>Foundations</HeaderLink>
		</div>
		<div class="header-right">
			<div>
				<ThemeIcon />
			</div>
			<div class="social-links">
				<a href="https://astro.build/" target="_blank" rel="noopener noreferrer">
					<span class="sr-only">Visit Astro.build</span>
					<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32" fill="none" xmlns="http://www.w3.org/2000/svg">
						<circle cx="12" cy="12" r="11" stroke="currentColor" stroke-width="0.5" fill="none" opacity="0.12"/>
						<path d="M12 3l1.9 4.1L18 9l-3 2.3L15.8 16 12 13.8 8.2 16 9 11.3 6 9l4.1-1.9L12 3z" fill="currentColor"/>
					</svg>
				</a>
				<a href="https://github.com/MarzSP" target="_blank" rel="noopener noreferrer">
					<span class="sr-only">Go to MarzSP's GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
						<path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
