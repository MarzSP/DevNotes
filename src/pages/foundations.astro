---
import Layout from '../layouts/BlogPost.astro';

const foundations = [
	{
		id: 'websites',
		title: 'Websites',
		items: [
			{ label: 'MDN Web Docs', url: 'https://developer.mozilla.org/' },
			{ label: 'Developer Roadmaps', url: 'https://roadmap.sh/' },
			{ label: 'GitHub Docs', url: 'https://docs.github.com/' },
			{ label: 'Can I use', url: 'https://caniuse.com/' },
			{ label: 'CSS-Tricks', url: 'https://css-tricks.com/' },
			{ label: 'freeCodeCamp', url: 'https://www.freecodecamp.org/' },
			{ label: 'W3Schools', url: 'https://www.w3schools.com/' },
			{ label: 'Big-O Cheat Sheet', url: 'https://www.bigocheatsheet.com/' },
			{ label: 'GeeksforGeeks', url: 'https://www.geeksforgeeks.org/' },
			{ label: 'Refactoring Guru', url: 'https://refactoring.guru/' },
			{ label: 'OWASP', url: 'https://owasp.org/' },
			{ label: 'Try Hack Me', url: 'https://tryhackme.com/' },
			{ label: 'Tweakers', url: 'https://tweakers.net/' },
		],
	},
	{
		id: 'books',
		title: 'Books',
		items: [
			{
				title: 'If it\'s smart, it\'s vulnerable' ,
				author: 'Mikko Hyppönen',
			},
			{
				title: 'The Art of Deception',
				author: 'Kevin Mitnick',
			},
			{
				title: 'Clean Code',
				author: 'Robert C. Martin',
			},
			{
				title: 'Pegasus',
				author: 'Laurent Richard & Sandrine Rigaud',
			},
			{
				title: 'The Basics of Bitcoins and Blockchains',
				author: 'Antony Lewis',
			},
			{
				title: 'Hacking with Kali Linux',
				author: 'Glen D. Singh',
			},
			{
				title: 'Patterns of Enterprise Application Architecture',
				author: 'Martin Fowler',
			},
			{
				title: 'Thinking, fast and slow',
				author: 'Daniel Kahneman',
			}
		],
	},
	{
		id: 'podcasts',
		title: 'Podcasts',
		items: [
			{
				label: 'Darknet Diaries',
				url: 'https://darknetdiaries.com/'
			},
			{
				label: 'Smashing Security',
				url: 'https://www.smashingsecurity.com/'
			},
			{
				label: 'Nerdland (in Dutch)',
				url: 'https://nerdland.be/podcast/'
			},
			{
				label: 'Brave New Planet',
				url: 'https://www.bravenewplanet.net/'
			},
			{
				label: 'The Jordan Harbinger Show',
				url: 'https://www.jordanharbinger.com/podcast/'
			},
			{
				label: 'TechStuff',
				url: 'https://www.iheart.com/podcast/105-techstuff-26941194/'
			},
			{
				label: 'Hacked',
				url: 'https://www.podcastone.com/hacked'
			},
			{
				label: 'A Question of Science',
				url: 'https://www.bbc.co.uk/programmes/b006qshd'
			},
		],
	},
];
---

<Layout
	title="Foundations"
	description="Websites, books and podcasts that have shaped my understanding of technology and security."
	fullWidth={true}
>
	<div class="foundations-grid">
		{foundations.map((section) => (
			<section
				id={section.id}
				class={`foundations-box foundations-box--${section.id}`}
			>
				<h2>{section.title}</h2>
				<p>{section.description}</p>

				<ul>
					{section.items.map((item) => (
						<li>
							{'url' in item ? (
								<a href={item.url} target="_blank" rel="noopener noreferrer">
									<span class="link-label">{item.label}</span>
									<span class="link-url">{item.url}</span>
								</a>
							) : (
								<>
									<em>{item.title}</em>
									{item.author && <span class="muted"> — {item.author}</span>}
								</>
							)}
						</li>
					))}
				</ul>
			</section>
		))}
	</div>
</Layout>

